<% layout('layouts/boilerplate.ejs') %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.6rem;
            opacity: 0.7;

        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3rem;
            margin-top: 1rem;
            padding: 1rem;
            display: flex;
            align-items: center;
            margin-left: 1rem;
        }
    </style>

    <body>
        <div id="filters">
            <div class="filter">
                <div> <i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-wheat-awn"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beachs</p>
            </div>
            <div class="filter">
                <div> <i class="fa-regular fa-snowflake"></i></div>
                <p>Snow</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i> </div>
                <p>Top citys</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-water"></i></div>
                <p>Lakes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-heart"></i></div>
                <p>Honeymoon</p>
            </div>
            <div class="filter">
                <div> <i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check form-switch ">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display after tax</label>
                </div>
            </div>
            
        </div>

        <div class="container">
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-2">
                <% for (let listings of allListings) { %>
                    <div class="col">
                        <div class="card-listing h-100" style="width:20rem;">
                            <img src="<%= listings.image.url%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <%= listings.title %>
                                </h4>
                                <h5 class="card-title mt-2">&#8377;<%= listings.price.toLocaleString("en-IN") %> /night
                                        <i class="tax-info">&nbsp; +18% GST </i></h5>

                                <a href="/listings/<%= listings._id %>" class="btn btn-primary mt-3">View listing</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </body>
    <script>
        let taxswitch = document.getElementById("flexSwitchCheckDefault");
        taxswitch.addEventListener("click", () => {
            let taxinfo = document.getElementsByClassName("tax-info");
            for(info of taxinfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline";
                }else{
                    info.style.display = "none";
                }
            }
        });
        
    </script>